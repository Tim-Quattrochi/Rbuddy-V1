
#NEON db connection string
DATABASE_URL=

JWT_SECRET='openssl rand -base64 32' # run this command and paste the output here

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
CALLBACK_URL=

FRONTEND_URL=

# AI Chat Configuration
# Supported providers: openai, gemini, mistral, perplexity, anthropic (default: openai)
AI_PROVIDER=openai

# OpenAI Configuration (when AI_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo # Optional: gpt-3.5-turbo, gpt-4, gpt-4-turbo, etc.

# Google Gemini Configuration (when AI_PROVIDER=gemini)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro # Optional: gemini-pro, gemini-pro-vision, etc.

# Mistral AI Configuration (when AI_PROVIDER=mistral)
MISTRAL_API_KEY=
MISTRAL_MODEL=mistral-small-latest # Optional: mistral-small-latest, mistral-medium-latest, mistral-large-latest, etc.

# Perplexity AI Configuration (when AI_PROVIDER=perplexity)
PERPLEXITY_API_KEY=
PERPLEXITY_MODEL=llama-3.1-sonar-small-128k-chat # Optional: llama-3.1-sonar-small-128k-chat, llama-3.1-sonar-large-128k-chat, etc.

# Anthropic Configuration (when AI_PROVIDER=anthropic)
# Note: Requires installing @anthropic-ai/sdk package
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229 # Optional: claude-3-opus, claude-3-sonnet, claude-3-haiku, etc.