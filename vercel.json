{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "{api/_lib/**,server/**,shared/**}"
    }
  },
  "rewrites": [
    { "source": "/api/users/me", "destination": "/api/users/me" },
    { "source": "/api/users/(.*)", "destination": "/api/users/$1" },
    { "source": "/api/daily-ritual/mood", "destination": "/api/daily-ritual/mood" },
    { "source": "/api/daily-ritual/intention", "destination": "/api/daily-ritual/intention" },
    { "source": "/api/chat/send", "destination": "/api/chat/[action]" },
    { "source": "/api/chat/history", "destination": "/api/chat/[action]" },
    { "source": "/api/chat/clear", "destination": "/api/chat/[action]" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
