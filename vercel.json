{
  "version": 2,
  "builds": [
    {
      "src": "server/api/:path*",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/server/index.ts" },
    { "source": "/(.*)", "destination": "client/index.html" }
  ]
