{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "{api/_lib/**,server/**,shared/**}"
    }
  },
  "rewrites": [
    { "source": "/api/users/(.*)", "destination": "/api/user/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
