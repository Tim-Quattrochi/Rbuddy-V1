{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "{server/**,shared/**}",
      "excludeFiles": "{**/*.test.ts,**/__tests__/**,**/_lib/**}"
    }
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./api"
}
