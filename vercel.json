{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
  "api/**/*.ts": {
    "runtime": "nodejs22.x",
    "includeFiles": "{server/**,shared/**}"
  }
},
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
