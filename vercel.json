{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/users/me",
      "destination": "/api/user/me"
    },
    {
      "source": "/api/user/:action",
      "destination": "/api/user/[action]"
    },
    {
      "source": "/api/daily-ritual/:action",
      "destination": "/api/daily-ritual/[action]"
    },
    {
      "source": "/api/chat/:action",
      "destination": "/api/chat/[action]"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@4.0.0",
      "includeFiles": "server/**,shared/**,db/**,api/_lib/**",
      "excludeFiles": "**/*.test.ts,**/__tests__/**"
    }
  }
}
